<%- include('../partials/header') %>
        <h1>Our Selection Of items</h1>
        <section id="items-container">
            <%if(items.length) {%>
                <% items.forEach(item => { %>
                    <section class="items">
                        <a href="/store/<%= item.id %>">
                            <div class="image-box">
                                <img src="<%= item.image %>" alt="dumbbell">
                            </div>
                            <p class="title"><%= item.title %></p>
                            <section class="description">
                                <p class="condition"><%= item.condition %></p>
                                <hr>
                                <section class="price-offers">
                                    <p class="price"><span class="desktop-only">Price:</span> $<%= item.price %></p>
                                    <p class="offers">Offers: <%= item.offers %></p>
                                </section>
                            </section>
                        </a>
                    </section>
                <% }) %>
            <%} else {%>
                <p class = "no-items">No items found</p>
            <%}%>
        </section>
    </main>
<%- include('../partials/footer') %>

